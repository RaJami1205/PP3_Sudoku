@page
@model sudoku.Pages.Tablero.tableroModel
@{
}

<div class="text-center">
    <h1>🧩 Sudoku Master 🧩</h1>

    <div class="sudoku-board mt-4">
        <table class="table table-bordered">
            @for (int i = 0; i < 9; i++)
            {
                <tr>
                    @for (int j = 0; j < 9; j++)
                    {
                        <td>
                            <input type="number" min="1" max="9" class="sudoku-cell" />
                        </td>
                    }
                </tr>
            }
        </table>
    </div>

    <div class="mt-4">
        <button class="btn btn-success">✅ Verificar Solución</button>
        <button class="btn btn-danger">🔁 Reiniciar</button>
        <a href="/" class="btn btn-secondary">🏠 Volver al Inicio</a>
    </div>
</div>

<style>
    .sudoku-board {
        display: inline-block;
    }

    .sudoku-cell {
        width: 40px;
        height: 40px;
        text-align: center;
        font-size: 1.2rem;
        border: 1px solid #ccc;
    }

    /* Bordes más gruesos para los cuadrantes 3x3 */
    tr:nth-child(3n) td {
        border-bottom: 3px solid #000;
    }

    td:nth-child(3n) {
        border-right: 3px solid #000;
    }
</style>