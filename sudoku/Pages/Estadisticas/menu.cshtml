@page
@model sudoku.Pages.EstadisticasModel

<h2>📊 Estadísticas de Todas las Partidas</h2>

@if (Model.EstadisticasTodas.Count == 0)
{
    <p>No hay estadísticas registradas.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Celdas de Ingreso</th>
                <th>Verificaciones</th>
                <th>Errores</th>
                <th>Sugerencias Usadas</th>
                <th>Tipo de Finalización</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.EstadisticasTodas.Count; i++)
            {
                var est = Model.EstadisticasTodas[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@est.CeldasIngresadas</td>
                    <td>@est.Verificaciones</td>
                    <td>@est.ErroresVerificacion</td>
                    <td>@est.SugerenciasUsadas</td>
                    <td>@est.TipoFinalizacion</td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="/Tablero" class="btn btn-primary mt-3">Volver al Juego</a>
